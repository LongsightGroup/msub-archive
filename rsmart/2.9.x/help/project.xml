		<deploy.type>war</deploy.type>
	</properties>

	<dependencies>	
	</dependencies>

	<build>

		<sourceDirectory>src/java</sourceDirectory>

		<resources>
			<resource>
				<directory>${basedir}/src/bundle</directory>
