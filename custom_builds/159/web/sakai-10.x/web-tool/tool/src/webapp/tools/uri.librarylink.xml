<?xml version="1.0"?>

<registration>

	<tool
			id="uri.librarylink.annotatedurl"
			title="URI Libraries"
			description="URI Libraries link">


<!--    The following configuration uses the older web content tool type to display the target of a link
        in the default iFrame. SHJ 8/25/14 -->

<!--
        <configuration name="sakai.properties.url.key" value="urilibrarylink.url" />	
		<configuration name="reset.button" value="true" type="final" />
-->

<!--    The following configuration uses the annotatedurl type to create a page with a link and description,
        where link will result in a popup to another window. This configuration is suitable for http
        situations. SHJ 8/25/14 -->


		<configuration name="special" value="annotatedurl" type="final" />
		<configuration name="reset.button" value="true" type="final" />
		<configuration name="desp" value="Research assistance, subject guides, and useful resources compiled by your friendly librarians." />
		<configuration name="TargetPageName" value="University of Rhode Island Libraries" />
		<configuration name="TargetPageUrl" value="https://uri.libguides.com/" />
		<configuration name="TargetPagePopup" value="false" />
		
		<configuration name="hide.options" value="false" />
		<configuration name="height" value="800px" />	
		
		<category name="course" />
        <category name="project" />
        <category name="portfolio" />
        <category name="myworkspace" />
		
		<!-- Allow this to be set -->
		<configuration name="functions.require" /> 
				
		<!-- Event for accessing the sakai.iframe.annotatedurl tool; remove property to remove logging of event -->
		<configuration name="webcontent.read" value="webcontent.read.uri.librarylink" /> 
		
		<!-- Event for modifying the sakai.iframe.annotatedurl tool configuration; remove property to remove logging of event -->
		<configuration name="webcontent.revise" value="webcontent.revise.uri.librarylink" /> 
		
	</tool>

</registration>